{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Insight: Start All (Full Stack)",
            "dependsOn": [
                "üêç Backend: Start Server",
                "‚ö° Frontend: Start Dev Server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "group": "insight"
            },
            "icon": {
                "id": "rocket",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "üêç Backend: Start Server",
            "type": "shell",
            "command": "python3 backend/run.py",
            "isBackground": true,
            "problemMatcher": {
                "owner": "python",
                "pattern": {
                    "regexp": "^\\s*File \"(.*)\", line (\\d+), in (.*)$",
                    "file": 1,
                    "line": 2,
                    "location": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Starting backend server",
                    "endsPattern": "Running on http"
                }
            },
            "presentation": {
                "group": "server",
                "reveal": "always"
            },
            "icon": {
                "id": "symbol-method",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "‚ö° Frontend: Start Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "vite v.* dev server running at",
                    "endsPattern": "Local:"
                }
            },
            "presentation": {
                "group": "server",
                "reveal": "always"
            },
            "icon": {
                "id": "zap",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "üß™ Analytics: Run Backend Tests",
            "type": "shell",
            "command": "export PYTHONPATH=$PYTHONPATH:${workspaceFolder}/backend && pytest backend/tests -v",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiMagenta"
            }
        },
        {
            "label": "üß™ Analytics: Run Smoke Tests",
            "type": "shell",
            "command": "export PYTHONPATH=$PYTHONPATH:${workspaceFolder}/backend && pytest backend/tests/test_api_flow.py -v",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "flame",
                "color": "terminal.ansiRed"
            }
        },
        {
            "label": "üß™ Analytics: Run Regression Tests",
            "type": "shell",
            "command": "export PYTHONPATH=$PYTHONPATH:${workspaceFolder}/backend && pytest backend/tests -m 'not slow' -v",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "history",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "üß™ Analytics: Run Scientific Validation",
            "type": "shell",
            "command": "export PYTHONPATH=$PYTHONPATH:${workspaceFolder}/backend && pytest backend/tests/test_r_benchmark.py -v",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "pulse",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "üì¶ Insight: Install All Dependencies",
            "type": "shell",
            "command": "pip install -r requirements.txt && cd frontend && npm install",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "package",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "üßπ Code: Format Backend (Black)",
            "type": "shell",
            "command": "black backend/app --line-length 120",
            "presentation": {
                "echo": true,
                "reveal": "silent"
            },
            "icon": {
                "id": "code",
                "color": "terminal.ansiBlue"
            }
        },
        {
            "label": "üõ†Ô∏è DB: Initialize Migrations",
            "type": "shell",
            "command": "export FLASK_APP=backend/run.py && flask db init",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "database",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "üõ†Ô∏è DB: Generate Migration",
            "type": "shell",
            "command": "export FLASK_APP=backend/run.py && flask db migrate -m 'auto_migration'",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "database",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "üõ†Ô∏è DB: Upgrade Database",
            "type": "shell",
            "command": "export FLASK_APP=backend/run.py && flask db upgrade",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "database",
                "color": "terminal.ansiYellow"
            }
        },
        {
            "label": "üå± Project: Setup Environment",
            "type": "shell",
            "command": "mkdir -p data",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "folder-opened",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "ÔøΩÔ∏è Project: Clean Up Artifacts",
            "type": "shell",
            "command": "find . -type d -name '__pycache__' -exec rm -rf {} +; rm -rf .pytest_cache frontend/dist dist/",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "trash",
                "color": "terminal.ansiRed"
            }
        },
        {
            "label": "üèóÔ∏è Frontend: Production Build",
            "type": "shell",
            "command": "npm run build",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "group": "build",
            "icon": {
                "id": "tools",
                "color": "terminal.ansiCyan"
            }
        },
        {
            "label": "üéÅ Insight: Package to Executable (PyInstaller)",
            "type": "shell",
            "command": "python3 package.py",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "icon": {
                "id": "archive",
                "color": "terminal.ansiBlue"
            }
        }
    ]
}